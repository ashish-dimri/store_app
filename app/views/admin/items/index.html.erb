<h1 class="jumbotron"> Admin | Items </h1>
<div class="container">
  <div class="row">
    <%= link_to 'Add Item', new_admin_item_path %>
    <div class="col-12 card">
      <table class="table">
			  <thead>
			    <th> Name </th>
			    <th> Description </th>
			    <th> Price </th>
			    <th> Quantity </th>
			    <th colspan="2">Actions</th>
			  </thead>
			  <tbody>
			  	<%= render partial: "admin_item", collection: @items %>
			  </tbody>
			</table>
    </div>
  </div>
</div>
